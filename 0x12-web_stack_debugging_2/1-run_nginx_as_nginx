#!/usr/bin/env bash
# Configures Nginx to run as the nginx user and listen on port 8080

# Create the nginx user if it doesn't exist
if ! id -u nginx >/dev/null 2>&1; then
    useradd -r nginx
fi

# Update nginx.conf to run as the nginx user
sed -i 's/user .*/user nginx;/' /etc/nginx/nginx.conf

# Update default site configuration to listen on port 8080
sed -i '/listen\s*\(.\+\):\([^;]\+\);/ s/80;/8080;/' /etc/nginx/sites-available/default

# Restart Nginx service to apply the changes
service nginx restart
