#!/usr/bin/env bash
# Run the whoami command under the user passed as an argument

if [ "$#" -ne 1 ]; then
  echo "Usage: $0 <username>"
  exit 1
fi

# Check if the user exists
if id "$1" >/dev/null 2>&1; then
  # Run whoami command as the specified user
  sudo -H -u "$1" whoami
else
  echo "User $1 does not exist"
  exit 1
fi
