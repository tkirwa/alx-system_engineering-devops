#!/usr/bin/env bash
# Setting up server to curl port 80 with no issues

# Update the package repositories
apt-get update

# Install curl package
apt-get -y install curl

# Remove any existing nginx configuration files
rm /etc/nginx/sites-available/*
rm /etc/nginx/sites-enabled/*~

# Update the default configuration to listen on port 80 instead of 8080
sed -i 's/8080/80/g' /etc/nginx/sites-enabled/default

# Restart the nginx service to apply the configuration changes
service nginx restart
