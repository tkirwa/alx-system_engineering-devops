#!/usr/bin/env bash
# Script that configures Nginx server with a custom 404 page

# Install Nginx server if not already installed
sudo apt-get -y update
sudo apt-get -y install nginx

# Create a custom 404 error page with the string "Ceci n'est pas une page"
echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/404.html

# Update the Nginx default configuration to use the custom 404 page
sudo sed -i '/listen 80 default_server;/a \    error_page 404 /404.html;' /etc/nginx/sites-available/default

# Restart Nginx to apply the configuration changes
sudo service nginx restart
